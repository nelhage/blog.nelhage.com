#!/usr/bin/env python3
import re
import sys

infile, outfile = sys.argv[1:]

with open(infile) as fh:
  data = fh.read()

data = re.sub(
  r'^[*][*]([^\n]+)[*][*]$',
  r'### \1',
  data,
  flags=re.M|re.S,
)

data = re.sub(
  r''' `
         \[ ([^]]+) \]
         \( ([^)]+) \)
       `
    ''',
  r'[`\1`](\2)',
  data,
  flags=re.M|re.S|re.X,
)

data = re.sub(
  r'\A[#][ ][^\n]+\n',
  '',
  data,
  flags=re.M|re.S|re.X,
)

data = re.sub(
  r'[ ]+\n',
  '\n',
  data,
  flags=re.M|re.S|re.X,
)

with open(outfile) as fh:
  out = fh.read()

header = re.search(
  r'\A---\n.*\n---\n',
  out,
  re.M|re.S)
if not header:
  print("Unable to parse header!")
  sys.exit(1)

with open(outfile, 'w') as fh:
  fh.write(header.group(0))
  fh.write(data)
